@model List<webAppCognizantTest.Models.User>
    <div class="container" style="margin:20px">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Celular</th>
                    <th>Endereço</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>Comandos</th>
                </tr>
            </thead>
            <tbody>
                @for (int i=0; i < Model.Count(); i++)
                {
                <tr>
                    <td>@Model[i].name</td>
                    <td>@Model[i].email</td>
                    <td>@Model[i].phone</td>
                    <td>@Model[i].address</td>
                    <td>@Model[i].neighborhood</td>
                    <td>@Model[i].city</td>
                    <td>@Model[i].state</td>
                    <td>
                        <a href="@Url.Action("DeleteUser", new { id = Model[i].ID })"><i class="glyphicon glyphicon-trash"></i></a>
                        <a href="@Url.Action("EditUser", new { id = Model[i].ID })"><i class="glyphicon glyphicon-edit"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>